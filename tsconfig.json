{
    "compilerOptions": {
        "module": "system",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "build/",
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
